</div>

<script>
  var monument = [-77.0353, 38.8895];
  mapboxgl.accessToken = 'pk.eyJ1Ijoiam9zZWNhem9ybGEiLCJhIjoiY2szNjI3M2tkMDdjdjNocXA2bTl4ZThvdiJ9.Z4j_rPWQgMRpRRFW6na_ug';
  var map = new mapboxgl.Map({
  container: 'map-locations',
  style: "mapbox://styles/mapbox/streets-v11",
  center: [0, 0],
  zoom: 1.5
  });

  var geocoder = new MapboxGeocoder({ 
    accessToken: mapboxgl.accessToken, 
    mapboxgl: mapboxgl, 
    marker: true, 
  });

  map.addControl(geocoder);
</script>

  {{#each places as |place|}}
    <script>
      var id = "{{place._id}}";
      var lng = Number("{{place.lng}}");
      var lat = Number("{{place.lat}}");

      var popup = new mapboxgl.Popup({closeOnClick: true})
      .setLngLat([lng, lat])
      .setHTML(`<a href="http://localhost:3000/places/${id}">Aqu√≠</a>`)
      .addTo(map);

      var el = document.createElement('div');
      el.id = 'marker';
    
      new mapboxgl.Marker(el)
      .setLngLat([lng, lat])
      .setPopup(popup) 
      .addTo(map);
    </script>
  {{/each}}